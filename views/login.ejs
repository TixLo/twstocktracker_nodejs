    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">輸入名稱和信箱登入</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" id="loginForm" method="post" action="/dologin">

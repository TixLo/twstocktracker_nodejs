                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" id="password" name="password" type="password" autofocus="" />
                                </div>
                                <button type="submit" class="btn btn-primary">登入</button>
                         .      <button onclick="doRegistry()" type="button" class="btn btn-primary">註冊</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

<div>
    <div class="pl-3 form-inline row">
        <span class='p-2'>固定區間</span>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="allMonth" name="optradio" value="all">
            <label class="form-check-label" for="allMonth">全部</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="oneMonth" name="optradio" value="mon1">
            <label class="form-check-label" for="oneMonth">一個月</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="threeMonth" name="optradio" value="mon3">
            <label class="form-check-label" for="threeMonth">三個月</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="sixMonth" name="optradio" value="mon6">
            <label class="form-check-label" for="sixMonth">六個月</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="oneYear" name="optradio" value="mon12">
            <label class="form-check-label" for="oneYear">一年</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="twoYear" name="optradio" value="mon24">
            <label class="form-check-label" for="twoYear">兩年</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="threeYear" name="optradio" value="mon36">
            <label class="form-check-label" for="threeYear">三年</label>
        </div>
    </div>
    <div class="pl-3 form-inline row">
        <span class='p-2'>自選區間</span>
        <div class="rounded border border-dark bg-light p-1">
            <span class='p-2'>開始日期:</span>
            <input type="text" name="date" class="form-control datepicker" id="startDate" value="" style="width: 110px">
            <span class='p-2'>結束日期:</span>
            <input type="text" name="date" class="form-control datepicker" id="endDate" value="" style="width: 110px">
        </div>
        <span class='p-2'>(預設:全部)</span>
    </div>

    <div class="accordion md-accordion" id="buyCondArea" role="tablist" aria-multiselectable="true">
        <div class="card">
            <div class="card-header" role="tab" id="headingBuy">
                <a data-toggle="collapse" data-parent="#buyCondArea" href="#collapseBuy" aria-expanded="true"
                    aria-controls="collapseBuy">
                <div class="mb-0">
                    買入參數設定 <i class="fas fa-angle-down rotate-icon"></i>
                </div>
                </a>
            </div>
            <div id="collapseBuy" class="collapse show" role="tabpanel" aria-labelledby="headingBuy"
                data-parent="#buyCondArea">
            <div class="card-body">
                <% include buyCondition %>
            </div>
        </div>
    </div>

    <div class="accordion md-accordion" id="sellCondArea" role="tablist" aria-multiselectable="true">
        <div class="card">
            <div class="card-header" role="tab" id="headingSell">
                <a data-toggle="collapse" data-parent="#sellCondArea" href="#collapseSell" aria-expanded="true"
                    aria-controls="collapseSell">
                <div class="mb-0">
                    賣出參數設定 <i class="fas fa-angle-down rotate-icon"></i>
                </div>
                </a>
            </div>
            <div id="collapseSell" class="collapse show" role="tabpanel" aria-labelledby="headingSell"
                data-parent="#sellCondArea">
            <div class="card-body">
                <% include sellCondition %>
            </div>
        </div>
    </div>

    <input type="button" id="configHelp" value="使用說明" class="btn btn-danger m-2" />
    <input type="button" id="saveConfig" value="儲存設定" class="btn btn-info m-2" />
    此設定會儲存於使用者[<%= username %>]
</div>

